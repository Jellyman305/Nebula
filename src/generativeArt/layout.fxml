<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<GridPane fx:id="root" fx:controller="generativeArt.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" >

    <Canvas fx:id="canvas" GridPane.columnIndex="0" GridPane.rowIndex="0" width="800" height="700"/>

    <GridPane fx:id="controls" GridPane.columnIndex="0" GridPane.rowIndex="1" minHeight="100" maxHeight="100" vgap="10">

        <Label styleClass="inputLabel" text="Origin X: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="startXTF" GridPane.columnIndex="1" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Origin Y: " GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="startYTF" GridPane.columnIndex="4" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Cell Width: " GridPane.columnIndex="6" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="cellWTF" GridPane.columnIndex="7" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="8" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Cell Height: " GridPane.columnIndex="9" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="cellHTF" GridPane.columnIndex="10" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="11" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Offset X: " GridPane.columnIndex="12" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="offsetXTF" GridPane.columnIndex="13" GridPane.rowIndex="0" onKeyTyped="#checkCharNumNeg"/>

        <Separator styleClass="divider" GridPane.columnIndex="14" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Offset Y: " GridPane.columnIndex="15" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="offsetYTF" GridPane.columnIndex="16" GridPane.rowIndex="0" onKeyTyped="#checkCharNumNeg"/>

        <Separator styleClass="divider" GridPane.columnIndex="17" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Strands: " GridPane.columnIndex="18" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="strandsTF" GridPane.columnIndex="19" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="20" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Loops: " GridPane.columnIndex="21" GridPane.rowIndex="0"/>
        <TextField styleClass="inputField" fx:id="loopsTF" GridPane.columnIndex="22" GridPane.rowIndex="0" onKeyTyped="#checkCharNum"/>

        <Separator styleClass="divider" GridPane.columnIndex="23" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Opacity: " GridPane.columnIndex="24" GridPane.rowIndex="0"/>
        <Spinner styleClass="inputSpin" fx:id="opacitySpin" GridPane.columnIndex="25" GridPane.rowIndex="0" min="0" max="1" amountToStepBy="0.1" initialValue="0.1"/>

        <Separator styleClass="divider" GridPane.columnIndex="26" GridPane.rowIndex="0"/>

        <Label styleClass="inputLabel" text="Shape: " GridPane.columnIndex="27" GridPane.rowIndex="0"/>
        <ChoiceBox fx:id="shapeDropdown" GridPane.columnIndex="28" GridPane.rowIndex="0"/>

        <Button fx:id="genBtn" text="Generate" onAction="#generate" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

    </GridPane>

    <stylesheets>
        <URL value="@Style.css"/>
    </stylesheets>

</GridPane>